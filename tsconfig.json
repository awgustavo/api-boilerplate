{
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "build",
        "rootDir": "./src",
        "paths": {
            "@shared/*": [
                "./src/shared/*"
            ],
            "@infrastructure/*": [
                "./src/infrastructure/*"
            ],
            "@domain/*": [
                "./src/domain/*"
            ],
            "@application/*": [
                "./src/application/*"
            ]
        },
        "sourceMap": true,
        "plugins": [
            {
                "transform": "ts-auto-mock/transformer",
                "cacheBetweenTests": false
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
